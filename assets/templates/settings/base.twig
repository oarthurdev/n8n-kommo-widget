<div id="kommo-settings" class="kommo-settings" style="display: none">
  {% if not active %}
    <div class="roydis-text--settings">
      {% if exception %}
        {{ exception }}
      {% else %}
        {{ langs.not_active }}
      {% endif %}
    </div>
  {% else %}
    <div class="kommo-text--settings">
      {{ langs.base }}
    </div>

    <form id="{{ prefix }}-settings__form">
      <h3 class="kommo-h3--settings">{{ langs.options.title }}</h3>
      <div class="kommo-text--settings">
        {{ langs.options.desc }}
      </div>

      <div class="kommo-settings__content">
        <!-- Webhook URL Configuration -->
        <div class="kommo-settings__content__title">
          <h4 class="kommo-h4--settings">{{ langs.webhook.title }}</h4>
          <p class="kommo-p--settings">{{ langs.webhook.desc }}</p>
        </div>
        <div class="kommo-settings__content__value">
          {{ webhook }}
        </div>

        <!-- Agent ID Configuration -->
        <div class="kommo-settings__content__title">
          <h4 class="kommo-h4--settings">{{ langs.agent.title }}</h4>
          <p class="kommo-p--settings">{{ langs.agent.desc }}</p>
        </div>
        <div class="kommo-settings__content__value">
          {{ agent }}
        </div>

        <!-- API Key Configuration -->
        <div class="kommo-settings__content__title">
          <h4 class="kommo-h4--settings">{{ langs.api_key.title }}</h4>
          <p class="kommo-p--settings">{{ langs.api_key.desc }}</p>
        </div>
        <div class="kommo-settings__content__value">
          {{ api_key }}
        </div>

        <!-- Entity Type Selection -->
        <div class="kommo-settings__content__title">
          <h4 class="kommo-h4--settings">{{ langs.entity.title }}</h4>
          <p class="kommo-p--settings">{{ langs.entity.desc }}</p>
        </div>
        <div class="kommo-settings__content__value">
          {{ entity }}
        </div>

        <!-- Trigger Events -->
        <div class="kommo-settings__content__title">
          <h4 class="kommo-h4--settings">{{ langs.events.title }}</h4>
          <p class="kommo-p--settings">{{ langs.events.desc }}</p>
        </div>
        <div class="kommo-settings__content__value">
          {{ events }}
        </div>

        <!-- Response Handling -->
        <div class="kommo-settings__content__title">
          <h4 class="kommo-h4--settings">{{ langs.response_handling.title }}</h4>
          <p class="kommo-p--settings">{{ langs.response_handling.desc }}</p>
        </div>
        <div class="kommo-settings__content__value">
          {{ response_handling }}
        </div>

        <!-- Test Integration -->
        <div class="kommo-settings__content__title">
          <h4 class="kommo-h4--settings">{{ langs.test.title }}</h4>
          <p class="kommo-p--settings">{{ langs.test.desc }}</p>
        </div>
        <div class="kommo-settings__content__value">
          {{ test_button }}
          <div id="{{ prefix }}-test-result" class="kommo-test-result" style="display: none; margin-top: 10px;"></div>
        </div>
      </div>
    </form>
  {% endif %}
</div>